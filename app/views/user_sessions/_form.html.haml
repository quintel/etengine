%h1 Login

= form_for(@user_session) do |f|
  = error_messages_for @user_session, :header_message => t("user.error_header"),:message=> t("user.error_message")
  %p
    = f.label :email, t("user.email")
    %br
    = f.text_field :email
  %p
    = f.label :password, t("user.password")
    %br
    = f.password_field :password
  %p
    = f.label :remember_me, t("user.remember")
    %br
    = f.check_box :remember_me, :checked => "checked"
  %p
    = hidden_field_tag 'redirect_to', params[:redirect_to]
    = f.submit 'Login'
