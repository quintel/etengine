// GRAPH is uppercase to make it obvious that it is in global namespace!
var GRAPH = new Graph();

<%
@gql.prepare
converters = @gql.present_graph.converters
converter_keys = converters.map(&:excel_id)

converters.each do |converter|
  position = @converter_positions[converter.excel_id]
  position ||= ConverterPosition.new(:converter_id => converter.excel_id)
  if converter
    params = [converter.excel_id,
              converter.key.to_s,
              position[:x] || 100,
              position.y_or_default(converter),
              converter.sector_key.to_s,
              converter.use_key.to_s,
              converter.key.to_s]
    params << (position.hidden == true)
    params << position.fill_color(converter)
    params << position.stroke_color(converter)
  end
-%>
<%= "new Converter(#{js_params(params)});".html_safe %>
<% end %>


<% @gql.present_graph.converters.map(&:input_links).flatten.uniq.each do |link|
  if converter_keys.include?(link.lft_converter.excel_id) and converter_keys.include?(link.rgt_converter.excel_id)
    params = [
      link.rgt_converter.excel_id,
      link.lft_converter.excel_id,
      (link.carrier.graphviz_color || '#999'),
      '1|-'   #"1|#{link.link_style}"
    ]
    -%>
    <%= "new Link(#{js_params(params)});".html_safe %>
  <% end %>
<% end %>

GRAPH.draw();