= render 'data/gqueries/subnav'

.row-fluid
  .span12
    .page-header
      %h2 
        Query tables
        = link_to "New", new_data_query_table_path, :class => 'btn'
    %table.table.table-condensed.table-striped
      %thead
        %tr
          %th.span4 Name
          %th Description
      %tbody
        - for query_table in @query_tables
          %tr
            %td= link_to h(query_table.name), data_query_table_path(:id => query_table.id)
            %td= h(query_table.description)

    
