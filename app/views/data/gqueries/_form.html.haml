= simple_form_for [:data, @gquery], :url => @gquery.new_record? ? data_gqueries_path : data_gquery_path(:id => @gquery) do |f|
  = f.input :key
  = f.input :query
  = f.input :unit
  = f.input :not_cacheable
  = f.input :description
  = f.association :gquery_group, :collection => GqueryGroup.all.map{|g| [g.group_key, g.id]}
  = f.button :submit
  %p
    %strong.red Warning: all gqueries will be overwritten with an Etsource import. Modify locally only for testing.
  = link_to "group descriptions", group_descriptions_data_gqueries_path, :target=>"_blank"
