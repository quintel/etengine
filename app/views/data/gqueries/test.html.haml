= render 'list'

#content
  .header
    Test Query

  - form_tag test_data_gqueries_path do |f|
    %p= text_area_tag :query, params[:query], :style => "width: 500px; height: 200px"
  
    %p= submit_tag 'check'

  %h3 Result
  - if @query
    = render 'result'
    %h2 Query Debug
    %h3 present
    %pre= Current.gql.present_interface.debug_graph(@query).reverse.join("\n") 
    %h3 future
    %pre= Current.gql.future_interface.debug_graph(@query).reverse.join("\n") 
  - else
    %em no query
