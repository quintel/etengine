%section#search_box.form-inline
  = form_tag data_gqueries_path, :method => :get do
    =# search_field_tag :q, params[:q], :placeholder => 'search'
    %label Gquery Group: 
    = select_tag :group, options_for_select(GqueryGroup.all.map(&:group_key), params[:group]), :include_blank => '-- group --'
    = submit_tag "Show group", :class => 'btn btn-small'

- content_for :footer do
  :javascript
    $(function(){
      $("input#q").autocomplete({
        source: #{gqueries_autocomplete_map_cache},
        select: function(event, ui) { window.location.href = ui.item.url }
      });
    });
