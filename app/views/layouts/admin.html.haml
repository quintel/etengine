!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
    %title
      EnergyTransitionModel

    = stylesheet_link_tag 'all', 'jquery.slider', 'jquery.fancybox-1.3.1'
    = stylesheet_link_tag 'formtastic', 'formtastic_changes', 'admin'
    = stylesheet_link_tag "jquery.jqplot", 'jquery.superfish', :cache => false
    = sprocket_layout_init :etm

    /
      [if lt IE 8]><link rel="stylesheet" type="text/css" href="/stylesheets/ie.css" /><![endif]
      [if lt IE 8]><link rel="stylesheet" type="text/css" href="/stylesheets/ie.slider.css" /><![endif]

  %body#model
    #header
      #nav
        %ul
          - tab("Graphs", 'admin/graphs', '')
          - tab("Gqueries", "data/latest/#{Current.scenario.country}/gqueries", '')
          - tab("Tables", 'admin/query_tables', '')
          - tab("Areas", "data/latest/#{Current.scenario.country}/areas", '')
          - tab("Carriers", "data/latest/#{Current.scenario.country}/carriers", '')
          - tab("Blackboxes", 'admin/blackboxes', '')
          - tab("Bb scenarios", 'admin/blackbox_scenarios', '')
          - tab("Translations", 'admin/translations', '')
          - tab("Historic", 'admin/historic_series', '')
          - tab("Expert", 'admin/expert_predictions', '')
        .clear
    #wrapper
      #content
        - flash_message
        = yield
