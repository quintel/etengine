%div{ id: id,
      class: "modal fade",
      tabindex: "-1",
      role: "dialog",
      'aria-hidden': "true" }
  .modal-dialog{ role: "document" }
    .modal-content
      .modal-header
        %h5.modal-title= title
        %button.close{ type: "button", 'data-dismiss': "modal", 'aria-label': "Close" }
          %span{ 'aria-hidden': "true" }

      - if body
        .modal-body
          = body

      - if footer
        .modal-footer
          = footer
